<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dialog_create"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:background="@drawable/round_edge_login"

    >

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공다 아이콘"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/dialog_create_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="X"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="0.05"
        ></TextView>

    <EditText
        android:id="@+id/dialog_create_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="그룹 이름"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.35" />

    <EditText
        android:id="@+id/dialog_create_pw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="패스워드"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_create_id" />

    <TextView
        android:id="@+id/dialog_create_create"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:background="@drawable/dialog_btn"
        android:gravity="center"
        android:text="CREATE"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_create_pw" />

    <TextView
        android:id="@+id/dialog_create_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 코드 : abcdefghijk123456"
        app:layout_constraintBottom_toTopOf="@+id/dialog_create_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_create_pw" />


</androidx.constraintlayout.widget.ConstraintLayout>