<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_frame"
    tools:context=".Login"
    android:gravity = "bottom"
    app:umanoDragView="@id/bottomlayout"
    app:umanoOverlay="false"
    app:umanoPanelHeight="0dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/autologin_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:text="Gongda"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/editText_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.172" />

        <EditText
            android:id="@+id/editText_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="id를 입력하세요"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText_pw"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="pw를 입력하세요"
            android:maxLines="1"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.589" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edge"
            android:elevation="5dp"
            android:gravity="center"
            android:text="login"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_pw"
            app:layout_constraintVertical_bias="0.447" />

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="회원가입"
            android:textColor="@color/purple_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toEndOf="@+id/checkBox_id"
            app:layout_constraintTop_toBottomOf="@+id/editText_pw" />

        <CheckBox
            android:id="@+id/checkBox_id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="아이디 기억"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_pw" />

        <CheckBox
            android:id="@+id/checkBox_autologin"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="64dp"
            android:text="자동 로그인"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_pw" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout

        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            >
        </TextView>
        <EditText
            android:id="@+id/editText_register_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="id를 입력하세요"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText_register_pw"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="pw를 입력하세요"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.589" />

        <TextView
            android:id="@+id/btn_regis_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록"
            android:layout_marginTop="20dp"
            android:layout_gravity="center" />

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>