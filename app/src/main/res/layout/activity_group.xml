<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Group.Group">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cambria"
        android:text="Group"
        android:textColor="#CFD5CE"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_group"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.1"
        tools:listitem="@layout/item_group"
        ></androidx.recyclerview.widget.RecyclerView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_group"
        app:layout_constraintVertical_bias="0.4">

        <FrameLayout
            android:id="@+id/textView4"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/create_join"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/btn_create"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/cambria"
                android:gravity="center"
                android:text="Create"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_join"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:fontFamily="@font/cambria"
                android:gravity="center"
                android:text="Join"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white" />


        </FrameLayout>

        <TextView
            android:id="@+id/btn_schedule_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/plusbtn_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/group_side_menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@color/sidemenu_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/group_btn_settings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:text="설정 아이콘"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/group_btn_close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:text="닫기 아이콘"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                ></TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="공다 아이콘"
            android:layout_gravity="center"
            ></TextView>
        <TextView
            android:id="@+id/group_sidemenu_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GONGDA@GAMIL.COM"
            android:layout_gravity="center"
            ></TextView>
        <TextView
            android:id="@+id/group_sidemenu_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:layout_gravity="center"
            android:gravity="center"
            ></TextView>

        <TextView
            android:id="@+id/group_btn_plan"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="PLAN"
            >
        </TextView>

        <TextView
            android:id="@+id/group_btn_group"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="UNION"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="DIARY"
            ></TextView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>